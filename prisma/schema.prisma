generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


// User roles enum
enum UserRole {
  CUSTOMER
  STAFF
  OWNER
}

// Order status enum
enum OrderStatus {
  PENDING
  PREPARING
  READY
  COMPLETED
  CANCELLED
}

// Users table - handles customers, staff, and owners
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  phone     String?  // Philippine mobile number (09xxxxxxxxx)
  barangay  String?  // Barangay/Area for delivery
  street    String?  // Street/Purok/Sitio address
  landmark  String?  // Landmark for easier location
  role      UserRole @default(CUSTOMER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  orders    Order[]  // A user can have many orders
}

// Products table - coffee menu items
model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Float
  category    String   // e.g., "Coffee", "Pastry", "Sandwich"
  imageUrl    String?
  available   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  orderItems  OrderItem[]  // A product can be in many orders
}

// Orders table - customer orders
model Order {
  id        String      @id @default(cuid())
  userId    String
  status    OrderStatus @default(PENDING)
  total     Float
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  // Relations
  user       User        @relation(fields: [userId], references: [id])
  orderItems OrderItem[]

  // Indexes for performance optimization
  @@index([createdAt])
  @@index([status])
  @@index([userId])
  @@index([createdAt, status])
}

// Order Items table - items in each order
model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  productId String
  quantity  Int
  price     Float    // Price at time of order

  // Relations
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}


